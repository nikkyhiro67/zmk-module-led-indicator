menuconfig ZMK_LED_INDICATOR
    bool "ZMK LED Indicator"
    depends on ZMK
    help
      Enable LED indicator module for status display (battery, layer, etc.)

if ZMK_LED_INDICATOR

config ZMK_LED_INDICATOR_THREAD_STACK_SIZE
    int "LED Indicator thread stack size"
    default 1024
    help
      Stack size for LED indicator update thread.

config ZMK_LED_INDICATOR_UPDATE_INTERVAL
    int "LED Indicator update interval (ms)"
    default 2000
    help
      LED indicator refresh interval.

endif
